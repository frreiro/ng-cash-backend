generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
	id Int @id @default(autoincrement())
	username String @unique
	password String
	accountId  Int @unique
	account Accounts @relation(fields: [accountId], references: [id])

	@@map("users")
}

model Accounts {
	id Int @id @default(autoincrement())
	balance Int
	user Users?
	transactionDebited Transactions[] @relation("accountDebited")
	transactionCredited Transactions[] @relation("accountCredited")

	@@map("accounts")
}

model Transactions {
	id Int @id @default(autoincrement())
	debitedAccountId Int 
	creditedAccountId Int 
	value Int
	createdAt DateTime @default(now())
	debitedAccount Accounts @relation("accountDebited", fields: [debitedAccountId], references: [id])
	creditedAccout Accounts @relation("accountCredited",fields: [creditedAccountId], references: [id])

	@@map("transactions")
}